<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/NPV"
    android:padding="10dp">
    <ImageView
        android:id="@+id/icon_custom_notification"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:src="@drawable/notifications_npv"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/icon_custom_notification"
        android:orientation="vertical"
        android:layout_toStartOf="@+id/tv_time_Notification_custom"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/tv_Title_Notification_custom"
            style="@style/TextAppearance.Compat.Notification.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="@string/app_name"/>

        <TextView
            android:id="@+id/tv_content_Notification_custom"
            style="@style/TextAppearance.Compat.Notification.Info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_time_Notification_custom"
        style="@style/TextAppearance.Compat.Notification.Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"

        android:text="12:12:12"/>

</RelativeLayout>